<div class="container">
	<ol class="worksheet">
		<% page.posts.each(function (page) { %>
		<li class="item">
			<div class="item-content">
				<a href="<%- url_for(page.path) %>" class="title">
					<% page.categories.map(function(category){  %>
					<%- category.name %>/<% }) %><b><%- page.title %> </b>
				</a>
				<a href="<%- url_for(page.path) %>" class="cover">
					<% if (page.cover){ %>
						<img src="<%- page.cover %> "/>
					<% } else { %>
						<img src="<%- theme.defaultCover %> "/>
					<% } %> 
				</a>
				<div class="desc">
					<article>
						<% if(page.excerpt) {%>
							<%- page.excerpt %>
						<%}  else{ %>
							<%- truncate(page.content, {length: 150, separator: ' '}) %>
						<% } %>
					</article>
				</div>
				<div class="meta">
					<%- list_tags(page.tags, {
						show_count: false,
						style: 'none',
						separator: ' '
					}) %>
				</div>
			</div>
		</li>
		<% }) %> 
	</ol>
</div>
